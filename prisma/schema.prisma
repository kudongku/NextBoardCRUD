generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    String
  password  String
  createdAt DateTime @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  comment   String
  author    String
  password  String
  createdAt DateTime @default(now())
}